{
  "name": "spn",
  "version": "5.6.2",
  "description": "Sprite Engine",
  "main": "spn.js",
  "scripts": {
    "test": "karma start karma.conf.js",
    "lint": "standard",
    "clean": "rimraf spn.* && rimraf coverage",
    "codecov": "cat coverage/*/lcov.info | codecov",
    "dist": "rollup -f umd -n spn src/index.js | buble | tee spn.js | uglifyjs -m -c > spn.min.js",
    "prepublish": "npm run clean && npm run dist",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kt3k/spn.git"
  },
  "keywords": [
    "sprite",
    "dom",
    "animation",
    "grid"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/spn/issues"
  },
  "homepage": "https://github.com/kt3k/spn#readme",
  "peerDependencies": {
    "capsid": ">=0.3.0",
    "jquery": ">=2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-plugin-istanbul": "^5.0.1",
    "babelify": "^10.0.0",
    "browserify": "^16.2.2",
    "buble": "^0.19.3",
    "capsid": "^0.28.0",
    "chai": "^4.0.1",
    "codecov.io": "^0.1.6",
    "dom-gen": "^2.1.0",
    "es6-promise": "^4.0.4",
    "husky": "^1.0.0",
    "jquery": "^3.0.0",
    "karma": "^3.0.0",
    "karma-browserify": "^5.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "lint-staged": "^8.0.0",
    "mocha": "^5.2.0",
    "prettier": "^1.14.2",
    "rimraf": "^2.5.1",
    "rollup": "^0.67.0",
    "standard": "^12.0.1",
    "uglify-js": "^3.0.0",
    "watchify": "^3.7.0"
  },
  "standard": {
    "env": [
      "browser",
      "mocha"
    ],
    "globals": [
      "expect",
      "$"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --no-semi --write",
      "standard --fix",
      "git add"
    ]
  }
}
