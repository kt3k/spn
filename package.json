{
  "name": "spn",
  "version": "1.0.1",
  "description": "Sprite Engine",
  "main": "lib/index.js",
  "scripts": {
    "test": "karma start karma.conf.js",
    "lint": "souffle",
    "clean": "rimraf lib && rimraf spn.* && rimraf coverage",
    "doc": "esdoc -c esdoc.json",
    "codecov": "cat coverage/*/lcov.info | codecov",
    "dist": "npm-run-all dist:**",
    "dist:lib": "babel src -d lib",
    "dist:spn.js": "browserify -t babelify export/global.js > spn.js",
    "dist:spn.min.js": "browserify -t babelify export/global.js | ./node_modules/.bin/uglifyjs --mangle --compress > spn.min.js",
    "prepublish": "npm run clean && npm run dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kt3k/spn.git"
  },
  "keywords": [
    "sprite",
    "dom",
    "animation",
    "grid"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/spn/issues"
  },
  "homepage": "https://github.com/kt3k/spn#readme",
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-eslint": "^6.0.4",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "browserify-istanbul": "^2.0.0",
    "chai": "^3.4.1",
    "class-component": "^7.0.0",
    "codecov.io": "^0.1.6",
    "dom-gen": "^2.1.0",
    "es6-promise": "^3.0.2",
    "esdoc": "^0.4.6",
    "isparta": "^4.0.0",
    "jquery": "^2.2.0",
    "karma": "^0.13.19",
    "karma-browserify": "^5.0.4",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^0.5.3",
    "karma-mocha": "^1.0.1",
    "mocha": "^2.3.4",
    "npm-run-all": "^1.5.0",
    "rimraf": "^2.5.1",
    "souffle-cli": "^3.0.0",
    "uglify-js": "^2.6.1",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "souffle": {
    "parser": "babel-eslint",
    "globals": [
      "beforeEach",
      "describe",
      "it",
      "expect",
      "$"
    ]
  }
}
